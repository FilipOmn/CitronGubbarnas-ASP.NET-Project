@model Candy  

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="imge for candy" />
        <div class="caption">

            @if (Model.IsOnSale)
             {
                <h4 class="pull-right">
                    <span class="text-danger">@Convert.ToInt32(Model.SalePercentage)% </span>
                    <span class="text-danger">@(Math.Round(Model.Price * ((100 - Model.SalePercentage)/100), 2)) kr</span>
                    <span class="text-muted">@Model.Price.ToString() kr</span>
                </h4 >
             }
             else
             {
                <h4 class="">@Model.Price.ToString() kr</h4>
             }
            <h3><a asp-controller="Candy" asp-action="Details" asp-route-id="@Model.CandyId">@Model.Name</a></h3>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-candyId="@Model.CandyId">Add to Cart</a>
            </p>
        </div>
    </div>
</div>